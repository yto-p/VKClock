<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center"
    tools:context=".MainActivity">

    <com.mtuci.vkclock.ClockView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:centerPointRadius="7dp"
        app:hourHandWidth="3dp"
        app:minuteHandWidth="3dp"
        app:secondHandWidth="2dp"
        app:circleWidth="4dp"
        app:lineWidth="2dp"
        app:numbersSize="20sp"
        app:numbersColor="@color/black"
        app:linePointColor="@color/black"
        app:hourHandPointColor="@color/black"
        app:minuteHandPointColor="@color/black"
        app:secondHandPointColor="@color/blue"
        app:centerPointColor="@color/blue"
        app:circlePointColor="@color/black" />
</LinearLayout>